<% function renderList(arrList) { %>
<%  let listString = []  %>
<%   arrList.forEach((rental, index) => {  %>
<%        listString.push('<li><a href="/rentals/' + rental._id + '">' + rental.vehicle + '</a></li>') %>
<%    }) %>
<%    return listString.join(" ")  %>
<% } %>